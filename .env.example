# =============================================================================
# SauberNow Environment Variables - EXAMPLE FILE
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# This file can be safely committed to git (contains no secrets)

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=eyJ...your-service-role-key-here

# -----------------------------------------------------------------------------
# Next.js Configuration  
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development

# -----------------------------------------------------------------------------
# Supabase Storage
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_STORAGE_URL=https://your-project.supabase.co/storage/v1

# -----------------------------------------------------------------------------
# Optional: Stripe (for payment processing)
# -----------------------------------------------------------------------------
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# -----------------------------------------------------------------------------
# Optional: Development
# -----------------------------------------------------------------------------
NEXT_PUBLIC_DEBUG_MODE=true